<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/icon_image_view"
        android:layout_toEndOf="@+id/icon_image_view"
        android:hint="TITLE"
        android:text="TITLE"
        android:textSize="25sp"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/short_description_text_view"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/icon_image_view"
        android:layout_toEndOf="@+id/icon_image_view"
        android:layout_below="@+id/title_text_view"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:hint="SHORT DESCRIPTION"/>

    <ViewFlipper
        android:id="@+id/screenshots_flipper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/icon_image_view"
        android:layout_marginTop="10dp">
    </ViewFlipper>

    <Button
        android:id="@+id/flipper_previous"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_below="@id/short_description_text_view"
        android:text="BACK"/>

    <Button
        android:id="@+id/flipper_next"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_below="@id/short_description_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="NEXT"
        />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/screenshots_flipper"/>


</RelativeLayout>